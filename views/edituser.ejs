<%- include layouts/header.ejs %>

<div class="page-data">
	<form method="post" action="/users/edit/<%=data[0].userid%>">
		<table cellpadding="11">
			<tr>
				<td class="label">Name</td><td>: <input type="text" name="name" value="<%=data[0].name%>" required></td>
			</tr>
			<tr>
				<td class="label">Email</td><td>: <input type="text" name="email" value="<%=data[0].email%>" required></td>
			</tr>
			<tr>
				<td class="label">Mobileno</td><td>: <input type="text" name="mobileno" value="<%=data[0].mobileno%>" required></td>
			</tr>
			<tr>
				<td class="label">City</td><td>: <input type="text" name="city" value="<%=data[0].city%>" required></td>
			</tr>
			<tr>
				<td class="label">State</td><td>: <input type="text" name="state" value="<%=data[0].state%>" required></td>
			</tr>
			<tr>
				<td class="label">Country</td><td>: <input type="text" name="country" value="<%=data[0].country%>" required></td>
			</tr>
			<tr>
				<td class="label">Zipcode</td><td>: <input type="text" name="zipcode" value="<%=data[0].zipcode%>" required></td>
			</tr>
			<tr>
                <td class="label"></td>
                <td>
                    &nbsp; <input type="submit" name="submit" value="Save">
                    <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                 </td>
            </tr>
		</table>
	</form>
</div>
<%- include layouts/footer.ejs %>


 